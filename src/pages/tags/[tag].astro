---
import BaseLayout from '../../layouts/BaseLayout.astro'

export async function getStaticPaths() {
	return [
		{ params: { tag: 'astro' } },
		{ params: { tag: 'successes' } },
		{ params: { tag: 'community' } },
		{ params: { tag: 'blogging' } },
		{ params: { tag: 'setbacks' } },
		{ params: { tag: 'learning in public' } },
